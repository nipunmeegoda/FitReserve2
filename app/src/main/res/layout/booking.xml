<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryBackground"
    android:padding="40dp">

    <!-- App Name -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/brand"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/colorAccentOrange" />

    <!-- Selected Package -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/selected_package"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/colorTextPrimary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <EditText
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:background="@color/bars"
            android:text="@string/pkg_basic"
            android:textColor="@color/colorTextSecondary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/price_5000"
            android:textSize="16sp"
            android:textColor="@color/colorTextSecondary" />
    </LinearLayout>

    <!-- Add-ons -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/add_ons"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/colorTextPrimary" />

    <!-- Add-on row 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:textColor="@color/colorPrimaryBackground"
            android:elevation="2dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:text="@string/addon_trainer"
                android:textColor="@color/colorTextPrimary" />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/price_1500"
            android:textColor="@color/colorTextSecondary" />
    </LinearLayout>

    <!-- Add-on row 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:textColor="@color/colorPrimaryBackground"
            android:elevation="2dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:text="@string/addon_nutrition"
                android:textColor="@color/colorTextPrimary" />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/price_2000"
            android:textColor="@color/colorTextSecondary" />
    </LinearLayout>

    <!-- Total -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/total"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/colorTextPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/price_6500"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/colorTextPrimary" />
    </LinearLayout>

    <!-- Buttons -->
    <Button
        android:id="@+id/btnDone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="@string/confirm_pay"
        android:textAllCaps="false"
        android:textColor="@color/colorButtonText"
        android:backgroundTint="@color/colorAccentOrange" />

    <Button
        android:id="@+id/CancelPay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:text="@string/cancel"
        android:textAllCaps="false"
        android:textColor="@color/colorAccentOrange"
        android:backgroundTint="@color/colorlight" />


</LinearLayout>
